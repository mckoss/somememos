#!/usr/bin/env python
import sys
import argparse


def main():
    commands = [func.rsplit('_', 1)[0] for func in globals() if func.endswith('_command')]
    commands.sort()
    usage = ["webnotes  <" + ' | '.join(commands) + ">"]
    usage.append("Available commands:")
    usage.append('')
    for command in commands:
        usage.append("%s: %s" % (command, globals()[command + '_command'].__doc__))

    parser = argparse.ArgumentParser(description="Webnotes command script.", usage='\n'.join(usage))
    parser.add_argument('command', help="Command name.")
    parser.add_argument("extras", nargs='*')
    args = parser.parse_args()

    if args.command not in commands:
        print "Unknown command: %s" % args.command
        print parser.print_help()
        sys.exit(1)

    command_func = globals().get(args.command + '_command')
    command_func(*args.extras)


def create_command(*args):
    """ Create a new web site. """
    print args


if __name__ == '__main__':
   main()
